@page
@model TimetrackerForProjects.Pages.Records.IndexModel

@{
    ViewData["Title"] = "Records Overview";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-outline-primary" role="button">Create New</a>
</p>
<form>
    <p>
        <select asp-for="ProjectNumber" asp-items="Model.ProjectNumbers">
            <option value="">All</option>
        </select>
        Projectnumber <input class="form.control" type="text" asp-for="SearchString" />
        <input class="btn btn-outline-primary" type="submit" value="Filter">
        <input class="btn btn-outline-primary" type="reset" value="Clear" onclick="this.form.reset(); return false;">
    </p>
</form>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Record[0].ProjectNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Record[0].Project)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Record[0].Customer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Record[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Record[0].Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Record[0].CurrentDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Record[0].StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Record[0].EndTime)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Record)
            {
<tr onclick="location.href = '@(Url.Page("Details", new { id = item.ID }))'">
    <td>
        @Html.DisplayFor(modelItem => item.ProjectNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Project)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Customer)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Surname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CurrentDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StartTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EndTime)
    </td>
    <td>
        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
    </td>
</tr>}
        </tbody>
    </table>
</div>
